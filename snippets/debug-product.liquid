{% comment %}
  Debug helper for product data
  Accepts:
  - product: {Object} Product Liquid object
{% endcomment %}

{% if product != blank %}
<div class="debug-product" style="display: none; padding: 10px; border: 1px solid #ccc; margin: 10px 0; background: #f9f9f9;">
  <h3>Product Debug Info</h3>
  <ul>
    <li>Title: {{ product.title }}</li>
    <li>ID: {{ product.id }}</li>
    <li>Has featured media: {% if product.featured_media %}Yes{% else %}No{% endif %}</li>
    {% if product.featured_media %}
      <li>Featured media type: {{ product.featured_media.media_type }}</li>
      <li>Featured media URL: {{ product.featured_media | image_url }}</li>
    {% endif %}
    <li>Total media: {{ product.media.size }}</li>
    <li>Available: {{ product.available }}</li>
    <li>Price: {{ product.price | money }}</li>
  </ul>
</div>
{% endif %}
