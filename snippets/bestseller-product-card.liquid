{% comment %}
  Renders a simplified product card for best-selling products section with title centered on image

  Accepts:
  - product: {Object} Product Liquid object
  - image_ratio: {String} Image aspect ratio setting
{% endcomment %}

<div class="bestseller-card">
  <a href="{{ product.url }}" class="bestseller-card__link">
    <div class="bestseller-card__media">
      {% if product.featured_media %}
        <img
          src="{{ product.featured_media | image_url: width: 533 }}"
          alt="{{ product.featured_media.alt | escape }}"
          loading="eager"
          width="533"
          height="533"
          class="bestseller-card__image"
        >
      {% else %}
        <div class="bestseller-card__placeholder">
          {{ 'product-apparel-' | append: forloop.index | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {% endif %}
      <div class="bestseller-card__title-overlay">
        <h3 class="bestseller-card__title">{{ product.title }}</h3>
      </div>
    </div>
  </a>
</div>
